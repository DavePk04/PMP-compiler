begin
  ** Variable declarations
  read(x)    ** Read input value for x
  read(y)    ** Read input value for y
  z := 0     ** Initialize z to zero

  ** Perform a simple calculation in a loop
  while x < 0 do
    begin
      z := z + y    ** Accumulate y into z
      x := x - 1    ** Decrement x
    end

  ** Output the result
  print(z)
end
